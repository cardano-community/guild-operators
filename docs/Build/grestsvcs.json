      "post": {
        "tags": ["Stake Address Queries"],
        "summary": "Get the full rewards history in ADA for a stake address, or certain epoch reward if specified",
        "produces": ["application/json", "application/vnd.pgrst.object+json"],
        "parameters": [
          {
            "required": true,
            "schema": {
              "required": ["_stake_address_bech32"],
              "type": "object",
              "description": "Get the full rewards history in ADA for a stake address, or certain epoch reward if specified",
              "properties": {
                "_stake_address_bech32": {
                  "format": "text",
                  "type": "string"
                },
                "_epoch_no": {
                  "format": "numeric",
                  "type": "number"
                }
              }
            },
            "in": "body",
            "name": "args"
          },
          {
            "$ref": "#/parameters/preferParams"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
