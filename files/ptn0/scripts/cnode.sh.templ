#!/bin/bash

if [ -z "$CNODE_HOME" ]; then
    CNODE_HOME="/opt/cardano/cnode"
fi

cardano-node run --topology $CNODE_HOME/files/topology.json --shelley-kes-key $CNODE_HOME/priv/kes.skey \
  --shelley-operational-certificate $CNODE_HOME/priv/ops.cert --shelley-vrf-key $CNODE_HOME/priv/vrf.skey \
  --config $CNODE_HOME/files/ptn0.yaml --database-path $CNODE_HOME/files/db \
  --port 6000 --socket-path $CNODE_HOME/sockets/node0.socket
